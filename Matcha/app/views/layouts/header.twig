<header class="app-header container-fluid bg-info">
    <div class="page-header m-auto container p-0">
        <div class="d-flex justify-content-between align-items-center h-100">
            <a href="/" class="ml-4"><img class="logo" src="/images/logo.png"/></a>
            {% if login %}
                    <div class="dropdown h-100">
                        <button class="btn btn-info dropdown-toggle h-100 float-right" type="button"
                                id="dropdownMenuButton"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-user"></i><span> {{ login }}</span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="/">Home</a>
                            <a class="dropdown-item" href="/settings">Settings</a>
                            <a class="dropdown-item" onclick="logout_ajax()">Logout</a>
                        </div>
                    </div>
            {% endif %}
        </div>
    </div>
</header>

<script>
    function logout_ajax(){
        window.location.replace("/logout");
    }
</script>

<style>
    .page-header {
        max-width: 900px;
        height: 60px;
    }
</style>